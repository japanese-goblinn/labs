@model IEnumerable<Tweet> 

@{
    ViewData["Title"] = "Home";
}

<div class="text-left mt-3">
    <h3 class="display-6">@ViewData["Title"]</h3>
</div>
<hr/>
@foreach (var tweet in Model)
{
    <div class="blockquote">
        <div class="d-flex bd-highlight pl-2">
            <div class="align-items-start bd-highlight" style="font-weight: bold">
                @tweet.User.Name
            </div>
            <div class="ml-1 align-items-start bd-highlight" style="color: gray">
                @@@tweet.User.Username
            </div>
            <div class="ml-1 align-items-start bd-highlight" style="color: gray">
                *
            </div>
            <div class="ml-1 align-items-start bd-highlight" style="color: gray">
                @tweet.Date.Hour h
            </div>
        </div>
        <div class="d-flex bd-hightlight text-left mt-2">
            <div class="pl-2 align-items-start bd-highlight">
                @tweet.Content
            </div>
        </div>
        @* @DateTime.Now - @tweet.Date.Hour *@
    </div>
    <hr/>
}