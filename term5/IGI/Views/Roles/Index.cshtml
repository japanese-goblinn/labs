@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
 
@{
    ViewData["Title"] = "Role's list";
}

<div class="text-left mt-3">
    <h3 class="display-6">@ViewData["Title"]</h3>
</div>
<hr/>
<div class="mt-3 mb-3">
    @foreach (var role in Model)
    {
        <div class="ml-2 row">
            <div class="p-2 col-9 text-left">
                @role.Name
            </div>
            <div class="col-3">
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button type="submit" class="btn btn-danger">
                        Delete
                    </button>
                </form>
            </div>
        </div>
        <hr/>
    }
    <a class="btn btn-primary" asp-action="Create">Add</a>
    <a class="btn btn-secondary" asp-controller="Users" asp-action="Index">User's list</a>
</div>
