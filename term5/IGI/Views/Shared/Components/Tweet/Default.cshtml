@model Tweet

<div class="">
    <div class="d-flex bd-highlight pl-2">
        <div class="align-items-start bd-highlight" style="font-weight: bold">
            <a asp-controller="Profile" asp-action="Index" 
               asp-route-userName="@Model.Author.UserName" class="text-dark">
                @Model.Author.Name
            </a>
        </div>
        <div class="ml-1 align-items-start bd-highlight" style="color: gray">
            @@@Model.Author.UserName
        </div>
        <div class="ml-1 align-items-start bd-highlight" style="color: gray">
            *
        </div>
        <div class="ml-1 align-items-start bd-highlight" style="color: gray">
            @Html.DisplayFor(t => t.Date)
        </div>
    </div>
    <div class="d-flex bd-hightlight text-left mt-2">
        <div class="pl-2 align-items-start bd-highlight">
            @Model.Content
        </div>
    </div>
    <div class="d-flex bd-highlight mt-3 ml-2">
        <div class="align-items-start bd-highlight">
            <like tweet-id="@Model.Id" user-name="@User.Identity.Name"></like>
        </div>
        <div class="align-items-start bd-highlight ml-3">
            <retweet tweet-id="@Model.Id" user-name="@User.Identity.Name"></retweet>
        </div>
    </div>
</div>