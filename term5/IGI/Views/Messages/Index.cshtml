@using Microsoft.AspNetCore.Mvc.Localization
@model IEnumerable<User>
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Messages"];
}

<div class="text-left mt-3">
    <h3 class="display-6">@ViewData["Title"]</h3>
</div>
<hr/>
<div style="overflow-y: scroll; height: 730px;">
   @foreach (var chat in Model)
   {
       <div class="ml-2 text-left">
           <a id="chatId_@chat.Id" asp-action="ChatMessages" asp-route-id="@chat.Id">
               ✉️ @Localizer["Chat"] @@@chat.UserName
           </a> 
       </div>
       <hr/>
   } 
</div>
