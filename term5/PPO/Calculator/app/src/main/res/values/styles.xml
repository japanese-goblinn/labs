<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CalculatorButton">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="NumButton" parent="CalculatorButton">
        <item name="android:background">@drawable/rounded_num_button</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PrimaryActionButton" parent="CalculatorButton">
        <item name="android:background">@drawable/rounded_primary_action_button</item>
    </style>

    <style name="SecondaryActionButton" parent="CalculatorButton">
        <item name="android:background">@drawable/rounded_secondary_action_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ModeButton" parent="CalculatorButton">
        <item name="android:background">@drawable/rounded_mode_button</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

</resources>
